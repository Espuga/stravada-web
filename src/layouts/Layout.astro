---
import '@fontsource/caveat-brush';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
    <meta name="description" content="Black Pata CC, Strvada">
    <meta name="keywords" content="Stravada 2025, Stravada, Black Pata, Solsona">
    <meta name="author" content="Marc Espuga">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/img/logo.png" /><head>
    <link rel="stylesheet" href="/src/styles/global.css">
	</head>
	<body>
    <Header />
		<slot />
	</body>
</html>
<style is:global>
  html {
		/* font-family: 'Caveat Brush', system-ui, sans-serif; */
	}
  .font-1 {
    font-family: 'Caveat Brush', system-ui, sans-serif;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    let lastScrollY = window.scrollY;
    const header = document.getElementById('header');

    if (header) {
      window.addEventListener('scroll', () => {
        if(window.scrollY<50){
          header.classList.remove('ht');
          header.classList.add('ft');
        }else{

          if (window.scrollY > lastScrollY) {
            // Scrolling down
            header.classList.add('ht');
          } else {
            // Scrolling up
            header.classList.remove('ht');
            header.classList.add('ft');
          }
        }
        lastScrollY = window.scrollY;
      });
    }
  });
</script>
