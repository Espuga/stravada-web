<style>

.h-custom {
  height: 10vh;
}
.h-custom-2 {
  height: 8vh;
}
.h-custom-3 {
  height: 3vh;
}
.m-custom {
  margin-top: 11vh;
}
.menu {
  transition: opacity 0.3s ease; /* Agrega una transición suave de 0.3 segundos */
  opacity: 0; /* Inicialmente, oculta el menú */
  display: none;
}

.menu.visible {
  opacity: 1; /* Cuando la clase 'visible' se aplica, muestra el menú */
  display: block;
}

.border-custom {
  border-color: rgba(156, 163, 175, 0.4);
}
</style>

<script>
  const toggleBtn = document.querySelector('.toggle_btn')
  const menu = document.querySelector('.menu')
  
  toggleBtn?.addEventListener('click', function (event) {
    menu?.classList.toggle('visible');
  })

  const items = document.getElementsByClassName("item");

  switch(window.location.pathname) {
    case "/":
      let altresEdicions = document.getElementsByClassName("altres_edicions");
     
      Array.prototype.forEach.call(items, function(item) {
        if([...altresEdicions].includes(item)){
          item.classList.add('underline')
        }else {
          item.classList.remove('underline')
        }
      })
      break;
    case "/stravada":
      let stravada = document.getElementsByClassName("stravada");
     
      Array.prototype.forEach.call(items, function(item) {
        if([...stravada].includes(item)){
          item.classList.add('underline')
        }else {
          item.classList.remove('underline')
        }
      })
      break;
  }
</script>